{
  "name": "chaincheck",
  "version": "1.0.0",
  "description": "Blockchain-based product authenticity verification system",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "frontend": "cd frontend && npm run dev",
    "server": "cd qr-generator && node server.js"
  },
  "keywords": [
    "blockchain",
    "web3",
    "product-verification",
    "anti-counterfeit",
    "polygon"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "concurrently": "^8.2.2",
    "hardhat": "^2.22.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}

